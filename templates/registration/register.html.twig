

{% block body %}

<section class="container">
    <div class="row">
        <div class="col">

            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Credentials</legend>
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>
                <fieldset class="mb-3">
                    <legend>Adrress</legend>
                        {{ form_row(registrationForm.address) }}
                        {{ form_row(registrationForm.zipcode) }}
                        {{ form_row(registrationForm.city) }}
                </fieldset>
                

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}
                    {% if(app.user) %}
                        <button type="submit" class="btn btn-info btn-lg mt-4">Modifier</button>
                    {% else %}
                    <button type="submit" class="btn btn-info btn-lg mt-4">Sauvegarder</button>
                        <a href="{{  path('app_login')  }}" class="btn btn-primary mt-4">Login</a>
                    {% endif %}
            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>

{% endblock %}
