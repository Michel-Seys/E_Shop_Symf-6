{% if pages > 1 %}
    <nav class="">
        <ul class="pagination mx-auto">
            
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage - 1}) }}">Previous</a>
                    </li>
                {% else %}
                    <li class="page-item disable">
                        <a class="page-link">Previous</a>
                    </li>
                {% endif %}

                {% for page in 1..pages %}
                    <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                        <a class="page-link" href="{{ path(path, {slug: slug, page: page}) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if currentPage < pages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage + 1}) }}">Next</a>
                    </li>
                {% else %}
                    <li class="page-item  disable">
                        <a class="page-link">Next</a>
                    </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}