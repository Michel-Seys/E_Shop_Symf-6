{% extends 'base.html.twig' %}

{% block title %}Test{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Demo E_Shop</h1>
                <p class="h2">Accueil</p>
            </div>
        
        {%  for category in categories %}
            {% if category.parent == null %}
                <div class="col-12">
                    <h2>{{ category.name }}</h2>
                </div>
                {% else %}
                <div class="col-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title">{{ category.name }}</h3>
                            <p class="card-text">Description</p>
                            <a href="{{ path('categories_list', {slug: category.slug}) }}" class="btn btn-primary">Go...</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        {%  endfor %}
        <div class="col-12">
        </div>        
    </section>
    </main>
{% endblock %}
